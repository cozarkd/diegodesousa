---
// import AnimatedCircles from '@/components/AnimatedCircles.astro'
import BaseHead from '@/components/BaseHead.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import { Picture } from 'astro:assets'

import SectionContainer from '@/components/SectionContainer.astro'
import ContactForm from '@/components/ContactForm.astro'
import ProjectsSection from '@/components/sections/ProjectsSection.astro'
import CollaborationsSection from '@/components/sections/CollaborationsSection.astro'
import About from '@/components/sections/About.astro'
import Badge from '@/components/Badge.astro'
import DiegoPortrait from '@/assets/diego_bw.webp'

import { getI18N } from '@/i18n'
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
import { getLangFromUrl } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)
import { ViewTransitions } from 'astro:transitions'
---

<html
  lang={lang}
  class='scroll-py-24 scroll-smooth scrollbar scrollbar-track-background scrollbar-thumb-foreground motion-reduce:scroll-auto'
>
  <head>
    <BaseHead title={i18n.SEO_TITLE_1} description={i18n.SEO_DESCRIPTION} />
    <ViewTransitions />

    <style></style>
  </head>
  <body class='bg-background'>
    <Header />
    <main class='relative flex w-full flex-col bg-background'>
      <section
        class='relative flex h-svh flex-col justify-between px-6 py-24 pt-24 md:px-12 md:pt-56'
      >
        <article class='relative flex flex-col items-start justify-start'>
          <h1
            class='fadeIn z-10 max-w-prose text-balance text-2xl text-foreground'
            set:html={i18n.HERO.H1}
          />
        </article>
        <div
          class='fixed bottom-0 right-8 z-0 flex h-auto items-center justify-center bg-background dark:bg-transparent md:right-0 lg:right-8 xl:right-32'
        >
          <Picture
            src={DiegoPortrait}
            widths={[256, 771, 1090, 1340, 1542]}
            sizes='(max-width: 360px) 256px, (max-width: 720px) 771px, (max-width: 1090px) 1090px, (max-width: 1340px) 1340px, 1542px'
            alt={i18n.HERO.PORTRAIT.ALT}
            class='max-h-[40vh] w-auto mix-blend-multiply dark:opacity-90 dark:mix-blend-normal md:max-h-[55dvh] lg:max-h-[70dvh]'
            loading='eager'
          />
        </div>
      </section>

      <div
        class='w-full overflow-hidden text-background drop-shadow-4xl md:-mt-4'
      >
        <svg
          class='relative block h-8 w-full rotate-180 md:h-32'
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 1200 120'
          preserveAspectRatio='none'
        >
          <path
            d='M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z'
            opacity='.25'
            fill='currentColor'></path>
          <path
            d='M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z'
            opacity='.5'
            fill='currentColor'></path>
          <path
            d='M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z'
            fill='currentColor'></path>
        </svg>
      </div>
      <div class='relative flex w-full flex-col bg-background'>
        <SectionContainer
          id='projects'
          data-section='projects'
          class='min-h-dvh'
        >
          <ProjectsSection />
        </SectionContainer>
        <SectionContainer
          id='collaborations'
          data-section='collaborations'
          class='py-4 md:py-8'
        >
          <CollaborationsSection />
        </SectionContainer>
        <SectionContainer id='about' data-section='about' class=''>
          <About />
        </SectionContainer>
        <SectionContainer
          id='contact'
          data-section='contact'
          class='bg-background px-0 md:container'
        >
          <ContactForm />
        </SectionContainer>
      </div>
    </main>

    <Footer />
  </body>
</html>
